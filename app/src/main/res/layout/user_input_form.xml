<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/topLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tagUserNameForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:textSize="10dp"
                android:text="Nombre del cliente:"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/editUserNameForm"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:textSize="10dp"
                android:hint="Escribe un nombre"
                android:paddingLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/tagUserNameForm"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/billTagViewForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:textSize="10dp"
                android:text="Precio a cobrar al mes"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/billValueForm"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="10dp"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@id/billTagViewForm"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/userInstallPaymentTagViewForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:textSize="10dp"
                android:text="Se cobro por instalacion"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/installationChargedForm"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="10dp"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@id/userInstallPaymentTagViewForm"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>